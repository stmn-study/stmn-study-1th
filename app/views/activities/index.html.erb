<h1>アクティビティ</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.sentence %></td>
        <td><%= activity.project.name %></td>
        <td><%= activity.supported_point %></td>
        <td><%= activity.created_at %></td>
        <td><%= link_to 'Show', project_path(activity.project) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
