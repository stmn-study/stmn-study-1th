<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> エラー一覧</h2>

      <ul>
        <% user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image, '画像' %>
    <%= f.file_field :image, class: 'btn btn-lg btn-primary btn-block' %>
  </div>

  <div class="form-group">
    <%= f.label :name, '名前' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :gender, '性別' %>
    <%= f.text_field :gender, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :points, 'ポイント' %>
    <%= f.number_field :points, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit (user.new_record? ? '作成' : '更新'), data: {disable_with: '送信中'}, class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>